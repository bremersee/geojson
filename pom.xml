<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.bremersee</groupId>
  <artifactId>bremersee-geojson-collection</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <!-- Change version in GeoJsonObjectMapperModule, too. -->
  <name>Bremersee GeoJSON Collection</name>
  <packaging>pom</packaging>

  <description>
    This project contains abstract classes for reading and writing GeoJSON with the Jackson JSON
    Processor.
  </description>
  <url>http://bremersee.github.io/geojson/</url>

  <properties>
    <github.global.server>github</github.global.server>
    <java.version>1.8</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <product.vendor>bremersee.org</product.vendor>
    <!-- <jackson2.version>2.8.3</jackson2.version> -->
    <!-- junit.version>4.12</junit.version> -->
    <spring-boot.version>2.1.0.RELEASE</spring-boot.version>
    <swagger.version>1.5.21</swagger.version>
  </properties>

  <developers>
    <developer>
      <id>bremersee</id>
      <name>Christian Bremer</name>
      <organization>bremersee.org</organization>
      <organizationUrl>http://bremersee.org</organizationUrl>
      <email>christian@bremersee.org</email>
      <timezone>+1</timezone>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

  <organization>
    <name>bremersee.org</name>
    <url>http://bremersee.org</url>
  </organization>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <scm>
    <url>https://github.com/bremersee/geojson</url>
    <connection>scm:git:git://github.com/bremersee/geojson.git</connection>
    <developerConnection>scm:git:git@github.com:bremersee/geojson.git</developerConnection>
  </scm>

  <issueManagement>
    <url>https://github.com/bremersee/geojson/issues</url>
    <system>GitHub Issues</system>
  </issueManagement>

  <distributionManagement>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <modules>
    <module>geojson-common</module>
    <module>geojson-jts</module>
    <module>geojson-spring-data-mongodb</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring-boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>io.swagger</groupId>
        <artifactId>swagger-annotations</artifactId>
        <version>${swagger.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

